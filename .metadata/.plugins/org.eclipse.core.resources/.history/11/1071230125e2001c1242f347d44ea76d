import java.util.Scanner;

/**
 * Driver Class
 */
        	
public class GuessingGame {
	public static void main(String[] args) {
	    RNG.scan = new Scanner(System.in);	//SET RNG.scan to a new Scanner
	    int number, randomNumber = RNG.rand();	//INITIALIZE number and randomNumber with a random number generated by the function.
        
        int lowGuess = 0;	//INITIALIZE lowGuess to 0 and highGuess to 100
        int highGuess = 100;	
        
        boolean correct;	//CREATE a boolean variable
        char ans = 'y';	//SET ch equal to 'y'
        System.out.println("NUMBER GUESSER: ");	//PRINT "Number Guesser:"
        System.out.println("READY TO PLAY?!");
        RNG.resetCount();  //RESET count to 0.
    
            
        while(ans == 'y') {	//WHILE ch equals 'y', DO the loop
        	System.out.println("Guess a number between "+ lowGuess + " and " + highGuess + " --->"); //TAKE in user input    
        	number = RNG.scan.nextInt();	//MAKE number equal to the next user input 
            correct = RNG.inputValidation(number, lowGuess, highGuess);	//VALIDATE user input
            if(correct == true) {	//IF validate is true
            	if(number == randomNumber) {	//IF the guess matches the random number.
            		System.out.println("You got it right!!");	//PRINT "You guessed correct!!
            		System.out.println("Total number of guesses made... " + RNG.getCount());	//PRINT "Total number of guesses made is "
                        lowGuess = 0;	//RESET lowGuess and highGuess.
                        highGuess = 100;	
                        
                        randomNumber = RNG.rand();	//GENERATE a new random number.
                        System.out.println("Want to play again: (y/n)");	//PRINT "Want to guess again: (y/n)"
                        ans = RNG.scan.next().charAt(0);	//SET ch equal to user input
                        }
                    
                    else {	//ELSE,            
                        if(randomNumber < number) {	// IF the guess does not match with the random number.
                            						// SET the values of highGuess and lowGuess according to the random number.
                            highGuess = randomNumber + 1;
                        }
                        else {
                            lowGuess = randomNumber - 1;
                        }
                        System.out.println("Wrong guess." + "\nTry Again.");	//PRINT "Wrong guess, try again"
                    }
                }
                else {	// IF entered number is not between lowGuess and highGuess.
                    continue;
                }
            }
            System.out.println("Total number of guesses made... " + RNG.getCount());	
            }
	}
